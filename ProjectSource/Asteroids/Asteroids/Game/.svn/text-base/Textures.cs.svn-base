        /// <summary>
        /// Gets a specific playertexture matching a playernumber.
        /// </summary>
        /// <param name="playerNum"></param>
        /// <returns> a spaceship </returns>
        public static Texture2D GetPlayerTexture(int playerNum) {
            if (playerNum == 1)
                return Ship1;
            else if (playerNum == 2)
                return Ship2;
            else if (playerNum == 3)
                return Ship4;
            else return Ship3;
        }

        /// <summary>
        /// Gets a texture for a player showing the players life.
        /// </summary>
        /// <param name="playerNum"></param>
        /// <returns></returns>
        public static Texture2D GetPlayerLifeTexture(int playerNum) {
            if (playerNum == 1)
                return Life1;
            else if (playerNum == 2)
                return Life2;
            else if (playerNum == 3)
                return Life4;
            else return Life3;
        }

        /// <summary>
        /// Gets a specific bullet texture for a player.
        /// </summary>
        /// <param name="playerNum"></param>
        /// <returns></returns>
        public static Texture2D GetPlayerBulletTexture(int playerNum)
        {
            if (playerNum == 1)
                return Bullet1;
            else if (playerNum == 2)
                return Bullet2;
            else if (playerNum == 3)
                return Bullet4;
            else if (playerNum == 4)
                return Bullet3;
            else return Bullet5;
        }
        
