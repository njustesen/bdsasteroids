using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Asteroids {
    /// <author>Niels Justesen</author>
    /// <summary>
    /// A class containing the rules of a shield.
    /// </summary>
    static class Shield {
        static float maxShield = 100;

        /// <summary>
        /// The maximum amount of energy a shield has.
        /// </summary>
        public static float MaxShield {
            get { return Shield.maxShield; }
        }

        static float shieldRegen = 0.002f;

        /// <summary>
        /// The amount of energy regenerated every millisecond.
        /// </summary>
        public static float ShieldRegen {
            get { return Shield.shieldRegen; }
        }

        static float shieldUsage = 0.02f;

        /// <summary>
        /// The amount of energy used every millisecond when shield is activated.
        /// </summary>
        public static float ShieldUsage {
            get { return Shield.shieldUsage; }
        }

        static float hitEnergy = 10.0f;

        /// <summary>
        /// The amount of energy used every millisecond when shield is activated and hit.
        /// </summary>
        public static float HitEnergy {
            get { return Shield.hitEnergy; }
        }
    }
}
